#define PRODUCER_BIT (1 << 1)
#define CONSUMER_BIT (1 << 2)


typedef struct {
    uint16_t avg;
    uint64_t time;
} light_entry_t;

typedef struct {
    QueueHandle_t *queue;
    EventGroupHandle_t *event_group;

} task_params_t;


QueueHandle_t sensor_queue     = xQueueCreate(1, sizeof(light_entry_t));
EventGroupHandle_t event_group = xEventGroupCreate();


