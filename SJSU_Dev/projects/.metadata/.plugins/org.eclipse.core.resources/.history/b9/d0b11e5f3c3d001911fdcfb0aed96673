#include <stdlib.h>


void light_sensor_print_task(void *pvParameters){
    /*
        * 1) Initial ADC setup (Power, clkselect, pinselect, clkdivider)
        * 2) Select ADC channel 2
        * 3) Enable burst mode
        */

    while(1) {
        uint16_t ls_val = adc_read_channel(2);
        printf("Light Sensor value is %d\n", ls_val);
        delay_ms(100);
    }
}
