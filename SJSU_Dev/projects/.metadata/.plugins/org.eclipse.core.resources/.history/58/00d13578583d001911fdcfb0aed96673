#include "adcDriver.hpp"
#include <printf_lib.h>
#include <float.h>

LabAdc::LabAdc()
{
}

void LabAdc::AdcInitBurstMode()
{
    /*
     * Set pin 0.25 to ADC0.2
     */
    LPC_PINCON->PINSEL1 |= (1 << 18);

    /*
     * Initialize ADC Power
     */
    LPC_SC->PCONP |= (1 << pconp_adc);
    /*
     * Set clock divider (should be <= 13MHz) -> 48Mhz / 4 = 12Mhz: bits 15:8
     */
    LPC_ADC->ADCR |= (4 << CLOCK_DIV);
    /*
     * Enable Burst Mode: bit 16
     */
    LPC_ADC->ADCR |= (1 << 16);
    /*
     * Enable ADC Operational State: pin 21
     */
    LPC_ADC->ADCR |= (1 << 21);
}

void LabAdc::AdcSelectPin(Pin pin)
{
    switch(pin){
        case k0_25:
            LPC_PINCON->PINSEL1 |= (1 << p0_25);
            LPC_ADC->ADCR       |= (1 << k0_25);
            break;
        case k0_26:
            LPC_PINCON->PINSEL1 |= (1 << p0_26);
            LPC_ADC->ADCR       |= (1 << k0_26);
            break;
        case k1_30:
            LPC_PINCON->PINSEL3 |= (1 << p1_30);
            LPC_ADC->ADCR       |= (1 << k1_30);
            break;
        case k1_31:
            LPC_PINCON->PINSEL3 |= (1 << p1_31);
            LPC_ADC->ADCR       |= (1 << k1_31);
            break;
        default:
            break;
    }
}

float LabAdc::ReadAdcVoltageByChannel(uint8_t channel)
{
    uint16_t voltage = 0;
    switch (channel){
        case 0:
            voltage = LPC_ADC->ADDR0;
            break;
        case 1:
            voltage = LPC_ADC->ADDR1;
            break;
        case 2:
            voltage = LPC_ADC->ADDR2;
            break;
        case 3:
            voltage = LPC_ADC->ADDR3;
            break;
        case 4:
            voltage = LPC_ADC->ADDR4;
            break;
        case 5:
            voltage = LPC_ADC->ADDR5;
            break;
        case 6:
            voltage = LPC_ADC->ADDR6;
            break;
        case 7:
            voltage = LPC_ADC->ADDR7;
            break;
        default:
            return -1;
    }
    //float voltage = adc_raw;
    float voltage2 = voltage;
    voltage2 /= (float)0x0FFF;
    voltage2 *= (float)VREF;
    return voltage2;
}
